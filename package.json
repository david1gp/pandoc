{
  "name": "@adaptive-ds/pandoc",
  "version": "0.2.0",
  "scripts": {
    "dev": "bun --hot run src/server/server.ts",
    "start": "bun run src/server/server.ts",
    "build": "tsc -p ./tsconfig.client.json",
    "format": "bun run prettier --write ./src ./client",
    "init:user": "bash ops/setup/setup_01_create_user.sh",
    "init:bun": "bash ops/setup/setup_02_install_bun.sh",
    "init": "bun run init:user && bun run init:bun",
    "deploy": "bash ops/deploy.sh",
    "release": "bash ./ops/release.sh",
    "logs": "bash ops/scripts/logs.sh",
    "test": "bun test --preload ./test/setup.ts",
    "test:w": "bun test --preload ./test/setup.ts --watch",
    "tsc": "tsc --noEmit"
  },
  "dependencies": {
    "@adaptive-ds/utils": "^0.7.0",
    "@hono/standard-validator": "^0.2.2",
    "@hono/swagger-ui": "^0.5.3",
    "@valibot/to-json-schema": "^1.5.0",
    "hono": "^4.11.7",
    "hono-openapi": "^1.2.0",
    "valibot": "^1.2.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.7",
    "typescript": "^5"
  },
  "prettier": {
    "semi": false,
    "printWidth": 120,
    "trailingComma": "all"
  },
  "type": "module",
  "private": false,
  "description": "A self-hosted Pandoc API for document conversion between 40+ formats.",
  "homepage": "https://github.com/david1gp/pandoc",
  "keywords": [
    "bun",
    "pandoc",
    "document-conversion",
    "docx",
    "markdown",
    "pdf",
    "api",
    "converter"
  ],
  "repository": {
    "url": "git+https://github.com/david1gp/pandoc.git"
  },
  "license": "MIT",
  "exports": {
    "./*": "./dist/*"
  },
  "files": [
    "dist"
  ]
}
